{
  "manifest_version": 3,
  "name": "KillBait Checker Extension",
  "version": "1.0.0",
  "description": "Check the current page with KillBait to detect clickbait and misleading content.",

  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "https://server1.killbait.com/*",
    "https://killbait.com/*"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": ["https://killbait.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
